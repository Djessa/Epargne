{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}
{% block body %}
    <div id ="message_person_register">
    {% if success is defined  %}
        <div class="alert alert-success text-center">{{ success }}</div>
    {% endif %}
    </div>
    {% if form is defined  %}
    {{ form_start(form) }}
    <div class="row">
        <div class="col-lg-4 col-md-4">
            {{ form_row(form.name) }}
        </div>
        <div class="col-lg-4 col-md-4">
            {{ form_row(form.nationality) }}
        </div>
        <div class="col-lg-4 col-md-4">
            {{ form_row(form.identity) }}
        </div>
    </div>
    <div class="row">
        <div class="col-lg-4 col-md-4">
            {{ form_row(form.address) }}
        </div>
        <div class="col-lg-4 col-md-4">
            {{ form_row(form.tel) }}
        </div>
        <div class="col-lg-4 col-md-4">
            {{ form_row(form.email) }}
        </div>
    </div>
    <div class="row">
        <div class="col-lg-4 col-md-4">
            {{ form_row(form.cin_recto_file) }}
        </div>
        <div class="col-lg-4 col-md-4">
            {{ form_row(form.cin_verso_file) }}
        </div>
        <div class="col-lg-4 col-md-4">
            {{ form_row(form.certificat_file) }}
        </div>
    </div>
    <div class="form-group m-2 text-center">
        <button type="submit" class="btn btn-primary">Enregistrer</button>
    </div>
    {{ form_end(form) }}
    {% endif %}
{% endblock %}
