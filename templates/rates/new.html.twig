{% extends "base.html.twig" %}

{% block title %}
    Cr√©ation de nouveau taux
{% endblock %}
{% block stylesheets %}
    {{ encore_entry_link_tags('app')}}
{% endblock %}
{% block body %}
    {{ form_start(form) }}
    <div class="container">
        <div class="row">
            <div class="col">
                <div class="form-group">
                    {{ form_row(form.year) }}
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    {{ form_row(form.month) }}
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <div class="form-group">
                    {{ form_row(form.value_of_one) }}
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    {{ form_row(form.value_of_two) }}
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    {{ form_row(form.value_of_three) }}
                </div>
            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="Ajouter" class="btn btn-primary">            
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
{% block javascripts %}
    {{ encore_entry_script_tags('app')}}
{% endblock %}